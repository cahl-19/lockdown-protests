{{#*inline "inlineStyleSheets"}}
  <link rel="stylesheet" href="css/pages/index.css">
{{/inline}}

{{#*inline "body"}}
    <div class="main">
        <div class="topbar">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-1">
                        <div class="menu-area float-left d-block d-md-none">
                            <button
                                type="button" class="btn btn-light" id="menu-button" data-toggle="dropdown"
                                aria-haspopup="true" aria-expanded="false"
                            >
                                <svg viewBox="0 0 100 100" preserveAspectRatio="none">
                                    <rect y="0"  width="100" height="8"></rect>
                                    <rect y="48" width="100" height="8"></rect>
                                    <rect y="92" width="100" height="8"></rect>
                                </svg>
                            </button>
                              <div class="dropdown-menu" aria-labelledby="menu-button">
                                <a class="dropdown-item hidden" id="login-menu-item" href="#">Login</a>
                                <a class="dropdown-item hidden" id="register-menu-item" href="#">Register</a>
                                <a class="dropdown-item hidden" id="drop-pin-menu-item" href="#">Drop a Protest</a>
                            </div>
                        </div>
                    </div>
                    <div class="col-10 text-center"><h1 class="h1">Lockdown Protest Planner</h1></div>
                    <div class="col-1">
                    </div>
                </div>
            </div>
        </div>
        <div class="content-area">
            <div class="containuer-fluid">
                <div class="row">
                    <div class="d-none d-md-block col-md-2 sidebar">

                        <div class="login-card text-center hidden" id="login-card">
                            <table class="layout-table"><tbody><tr>
                                <td class="align-middle">
                                    <div>
                                        <button type="button" class="btn btn-primary login-button" id="login-button">
                                            Login
                                        </button>
                                    </div>
                                    <div><strong>Or</strong></div>
                                    <div>
                                        <button type="button" class="btn btn-primary login-button" id="register-button">
                                            Register
                                        </button>
                                    </div>
                                    <small class="text-muted">To Create and Sign-Up For Protests</small>
                                </td>
                            </tr></tbody></table>
                        </div>

                        <div class="notification-card text-center hidden" id="notification-card">
                            <table class="layout-table"><tbody><tr>
                                <td class="align-middle">
                                    <span class="text-muted">No New Notifications.</span>
                                </td>
                            </tr></tbody></table>
                        </div>

                        <div class="pin-card text-center hidden" id="pin-card">
                            <div>Drop a Pin</div>
                            <img
                                id='droppable-pin' class='grabbable select_disable'
                                ondragstart="return false;" oncontextmenu="return false;"
                                draggable="false" src="/assets/leaflet/marker-icon.png" alt='no-image'
                            >
                        </div>
                    </div>
                    <div class="h-100 col-sm-12 col-md-10 map-outer-div"><div id="map-div"></div></div>
                </div>
            </div>
        </div>
    </div>

    <div class="modal" tabindex="-1" role="dialog" id="protest-form-modal">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h3 class="modal-title text-center">Enter Your Protest Details</h3>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            <div class="protest-location">
                <small>For a Protest Located At: <span id='display-protest-plan-location'></span></small>
            </div>
            <form class="needs-validation" id='protest-form' autocomplete="off" novalidate>

                <input type="hidden" id="protest-latitude">
                <input type="hidden" id="protest-longitude">

                <div class="form-group">
                  <label for="protest-title">Title</label>
                  <input
                      type="text" class="form-control" id="protest-title"
                      aria-describedby="title-help" placeholder="Enter Protest Title" required
                  >
                  <small id='title-help' class="form-text text-muted">
                      Max 256 characters.
                  </small>
                </div>
                <div class="form-group has-validation">
                    <label for="protest-date">Date:</label>
                    <input type="date" id="protest-date" required>
                    <input type="time" id="protest-time" value="15:00" required>
                    <div><small class="form-text text-muted">
                        It is currently <span id="protest-user-current-time"></span>
                    </small></div>
                    <div class="invalid-feedback" id="protest-date-time-validity-feedback">
                        Date & Time are Required.
                    </div>
                </div>
                <div class="form-group">
                  <label for="protest-dress-code">Dress Code (Optional but Recommended )</label>
                  <input
                      type="text" class="form-control" id="protest-dress-code"
                      aria-describedby="dress-code-help" placeholder=""
                  >
                  <small id='dress-code-help' class="form-text text-muted">
                      Max 128 characters.
                  </small>
                </div>
                <div class="form-group">
                  <label for="protest-description">Description</label>
                  <textarea
                      class="form-control" id="protest-description"
                      rows="4" aria-describedby="protest-description-help" required
                  ></textarea>
                  <small id='protest-description-help' class="form-text text-muted">
                      Keep it legal, linking  to external sites is allowed and <em>encouraged</em>. Less than 768
                      characters.
                      <br/><br/>
                      Required: describe the meeting spot (or address), type of protest (rally, march, sit-in etc.) and
                      contact info (but don't dox yourself unless you understand the risks).
                  </small>
                </div>
            </form>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-primary" id="submit-new-protest">Submit</button>
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
          </div>
        </div>
      </div>
    </div>

    <div class="modal" tabindex="-1" role="dialog" id="login-modal">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h3 class="modal-title">Enter Your Login Details</h3>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            <form class="justify-content-center" id="login-form">
                <div class="form-group has-validation">
                    <label for="email-input">Email Address</label>
                    <input type="email" class="form-control" id="email-input" placeholder="Enter Email" required>
                </div>
                <div class="form-group">
                    <label for="password-input">Password</label>
                    <input type="password" class="form-control" id="password-input" placeholder="Password" required>
                    <div class="invalid-feedback" id="login-form-validity-feedback">
                        Invalid Username or Password
                    </div>
                </div>
            </form>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-primary" id="submit-login">Login</button>
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
          </div>
        </div>
      </div>
    </div>

    <div class="modal" tabindex="-1" role="dialog" id="pin-drop-modal">
      <div class="modal-dialog modal-sm" role="document">
        <div class="modal-content">
          <div class="modal-header d-block">
            <h3 class="modal-title  text-center">Drop Me</h3>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
                <div class="text-center">
                    <img
                        id='mobile-droppable-pin' class='grabbable select_disable'
                        ondragstart="return false;" draggable="false" oncontextmenu="return false;"
                        src="/assets/leaflet/marker-icon.png" alt='no-image'
                    >
                </div>
          </div>
        </div>
      </div>
    </div>
{{/inline}}